{
  "name": "vscode-statusbar-json-path",
  "displayName": "JSON Path Status Bar",
  "description": "Shows the path to the selected JSON property in the status bar",
  "version": "2.0.0",
  "author": "Rich Somerfield",
  "contributors": [
    "Quentin Lienhardt"
  ],
  "publisher": "QuentiumYT",
  "license": "MIT",
  "homepage": "https://github.com/Quentium-Forks/vscode-statusbar-json-path",
  "repository": {
    "type": "git",
    "url": "https://github.com/Quentium-Forks/vscode-statusbar-json-path.git"
  },
  "bugs": {
    "url": "https://github.com/Quentium-Forks/vscode-statusbar-json-path/issues"
  },
  "engines": {
    "vscode": "^1.66.0"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:asl",
    "onLanguage:ssm-json"
  ],
  "icon": "resources/icon.png",
  "main": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "contributes": {
    "commands": [
      {
        "command": "extension.statusBarJSONPath",
        "title": "Copy current JSONPath to clipboard"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "JSONPath StatusBar",
      "properties": {
        "statusBarJSONPath.keysSeparators": {
          "type": "string",
          "default": "dots",
          "description": "Choose between dots or indexes for JSON keys.",
          "enum": [
            "dots",
            "indexes"
          ],
          "enumDescriptions": [
            "Use dots for keys separators",
            "Use indexes for keys"
          ],
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "build": "npm run compile && vsce package"
  },
  "devDependencies": {
    "@types/node": "^17.0.31",
    "@types/vscode": "^1.66.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "typescript": "^4.6.4",
    "vsce": "^2.7.0"
  }
}
